<script type="text/javascript">
	$('#inputSubmitFormCreateProfil').on('click', function(){
		$.ajax({
			url: "ajax/ajax_check_profil.php",
			method: "POST",
        	dataType : "json",
			data: { 
				'email': $('#email').val()
    		},
		})
		.done(function(response){
			let data = JSON.stringify(response);
			if(data == "false"){
				$("#formCreateProfil").submit();
			}else{
				$("#messageProfilExistant").html('Le profil "'+ $('#email').val() + '" existe déjà');
				$("#messageProfilExistant").show();
				$('html, body').animate({ 
                     scrollTop: '0px' 
                });

				setInterval(function(){
					$("#messageProfilExistant").fadeOut(1000 );
				}, 10000);
			}
		});
	});

	$('#inputSubmitLogin').on('click', function(){
		$.ajax({
			url: "{{ (path('ajax_check_user')) }}",
			method: "POST",
        	dataType : "json",
			data: { 
				'email': $('#email').val(),
				'password': $('#password').val()
    		}
		})
		.done(function(response){
			let data = JSON.stringify(response);
			if(data == "false"){
				$("#messageUserInexistant").html('L\'utilisateur "'+ $('#email').val() + '" ou le mot de passe ne correspond pas');
				$("#messageUserInexistant").show();
			}else{
				$("#messageUserInexistant").html('');
				$("#messageUserInexistant").hide();
				
				$("#formLogin").submit();
			}
		});
	});
</script>